<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jenny.calorieconvertor.action_selection"
    tools:showIn="@layout/activity_action_selection">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />
    <GridLayout

        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="57dp"
        android:columnCount = "2"
        android:clickable="false"
        android:rowCount="3"
        android:layout_alignParentStart="false"
        android:nestedScrollingEnabled="true"
        android:rowOrderPreserved="true"
        android:useDefaultMargins="false">


        <Button

            android:text="Pushup"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:drawableTop="@drawable/exercise1"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:paddingTop="10dp"
            android:id="@+id/pup" />
        <Button

            android:text="Situp"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:drawableTop="@drawable/flexions"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:id="@+id/sup" />
        <Button

            android:text="Jumping Jacks"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:drawableTop="@drawable/jump11"
            android:paddingTop="10dp"
            android:id="@+id/jj" />
        <Button

            android:text="Jogging"
            android:layout_gravity="top|fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:drawableTop="@drawable/runner9"
            android:paddingTop="10dp"
            android:id="@+id/jg" />

        <Button

            android:text="Squats"
            android:layout_gravity="top|fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:drawableTop="@drawable/working7"
            android:paddingTop="10dp"
            android:id="@+id/sq" />
        <Button

            android:text="Leg-lift"
            android:layout_gravity="top|fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:drawableTop="@drawable/female107"
            android:paddingTop="10dp"
            android:id="@+id/ll" />

        <Button

            android:text="Plank"
            android:layout_gravity="top|fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:drawableTop="@drawable/exercise54"
            android:paddingTop="10dp"
            android:id="@+id/pk" />

        <Button

            android:text="Pullup"
            android:layout_gravity="top|fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:drawableTop="@drawable/pulling"
            android:paddingTop="10dp"
            android:id="@+id/pp" />

        <Button

            android:text="Cycling"
            android:layout_gravity="top|fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:drawableTop="@drawable/person316"
            android:paddingTop="10dp"
            android:id="@+id/cy" />

        <Button

            android:text="Walking"
            android:layout_gravity="top|fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:drawableTop="@drawable/walking2"
            android:paddingTop="10dp"
            android:id="@+id/w" />

        <Button

            android:text="Swimming"
            android:layout_gravity="top|fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:drawableTop="@drawable/olympic22"
            android:paddingTop="10dp"
            android:id="@+id/sw" />

        <Button

            android:text="StairClimbing"
            android:layout_gravity="top|fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:drawableTop="@drawable/stairway"
            android:paddingTop="10dp"
            android:id="@+id/sc" />



    </GridLayout>
</RelativeLayout>
